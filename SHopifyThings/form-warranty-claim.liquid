            <input
              type="radio"
              name="contact[pump_application]"
              value="Other"
              class="other-radio-input"
            >
            <input
              type="text"
              name="contact[pump_application_other]"
              placeholder="Other"
              class="other-radio-text "
            >
          </label>
        </div>
      </div>

      <!-- If using a skimmer, which model? -->
